    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_tasks">

    <fragment
        android:id="@+id/navigation_tasks"
        android:name="com.example.gorun.NewStory.ui.Tasks.TasksFragment"
        android:label="Tasks"
        tools:layout="@layout/fragment_tasks" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.gorun.NewStory.ui.Profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/navigation_trainers"
        android:name="com.example.gorun.NewStory.ui.Trainers.TrainersFragment"
        android:label="Trainers"
        tools:layout="@layout/fragment_trainers" />
    <fragment
        android:id="@+id/navigation_notification"
        android:name="com.example.gorun.NewStory.ui.notifications.NotificationsFragment"
        android:label="Notifications"
