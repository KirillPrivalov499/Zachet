<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/iron"
    >

    <ImageView
        android:layout_width="73dp"
        android:layout_height="82dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="166dp"
        android:layout_marginLeft="166dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="170dp"
        android:layout_marginRight="170dp"
        android:src="@drawable/ic_directions_run_black_24dp" />

    <EditText
        android:id="@+id/et_name_fr"
        android:layout_width="331dp"
        android:layout_height="51dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="39dp"
        android:layout_marginLeft="39dp"
        android:layout_marginTop="237dp"
        android:layout_marginEnd="41dp"
        android:layout_marginRight="41dp"
        android:hint="Name"
        android:textColorHint="@color/base"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/et_email_fr"
        android:layout_width="331dp"
        android:layout_height="52dp"
        android:layout_below="@+id/et_name_fr"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="33dp"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="33dp"
        android:hint="Email"
        android:textColorHint="@color/base"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/et_password_fr"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_below="@+id/et_email_fr"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="33dp"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="33dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="@color/base"
        android:textSize="30sp" />


    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/spinner_fr"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/et_password_fr"
        android:layout_centerHorizontal="true"
        />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_registration_fr"
        style="@style/ButtonLoginRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner_fr"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="59dp"
        android:layout_marginLeft="59dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="61dp"
        android:layout_marginRight="61dp"
        android:layout_marginBottom="60dp"
        android:text="Registration" />


</RelativeLayout>